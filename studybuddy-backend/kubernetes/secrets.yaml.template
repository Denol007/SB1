# Kubernetes Secrets Template
# DO NOT commit this file with actual values filled in!
# Use this as a reference to create actual secrets in your cluster.
#
# To create secrets in Kubernetes, use:
# kubectl create secret generic studybuddy-secrets \
#   --from-literal=DATABASE_URL='postgresql+asyncpg://user:pass@host:5432/db' \
#   --from-literal=REDIS_URL='redis://host:6379/0' \
#   --from-literal=SECRET_KEY='your-secret-key' \
#   --namespace=studybuddy-prod
#
# Or apply this file after replacing placeholders:
# kubectl apply -f secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: studybuddy-secrets
  labels:
    app: studybuddy
type: Opaque
stringData:
  # Database Connection
  # Format: postgresql+asyncpg://username:password@hostname:5432/database_name
  DATABASE_URL: "REPLACE_WITH_DATABASE_URL"

  # Redis Connection
  # Format: redis://hostname:6379/0
  REDIS_URL: "REPLACE_WITH_REDIS_URL"

  # Application Secret Keys
  SECRET_KEY: "REPLACE_WITH_SECRET_KEY"
  JWT_SECRET_KEY: "REPLACE_WITH_JWT_SECRET_KEY"

  # Google OAuth Credentials
  GOOGLE_CLIENT_ID: "REPLACE_WITH_GOOGLE_CLIENT_ID"
  GOOGLE_CLIENT_SECRET: "REPLACE_WITH_GOOGLE_CLIENT_SECRET"

  # SMTP Email Password
  SMTP_USERNAME: "REPLACE_WITH_SMTP_USERNAME"
  SMTP_PASSWORD: "REPLACE_WITH_SMTP_PASSWORD"

  # AWS S3 Credentials (for file storage)
  AWS_ACCESS_KEY_ID: "REPLACE_WITH_AWS_ACCESS_KEY_ID"
  AWS_SECRET_ACCESS_KEY: "REPLACE_WITH_AWS_SECRET_ACCESS_KEY"

  # Sentry DSN (for error tracking)
  SENTRY_DSN: "REPLACE_WITH_SENTRY_DSN"

  # Optional: Additional API Keys
  # OPENAI_API_KEY: "REPLACE_WITH_OPENAI_API_KEY"
  # STRIPE_SECRET_KEY: "REPLACE_WITH_STRIPE_SECRET_KEY"
  # STRIPE_WEBHOOK_SECRET: "REPLACE_WITH_STRIPE_WEBHOOK_SECRET"

